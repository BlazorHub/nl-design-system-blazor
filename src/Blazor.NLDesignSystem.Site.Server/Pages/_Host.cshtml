@page "/"
@namespace Blazor.NLDesignSystem.Site.Server
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NL Design System for Blazor - Server</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <!-- Blazor.NLDesignSystem -->
    <link href="_content/Blazor.NLDesignSystem/dist/core/uno.css" rel="stylesheet" />
    <script src="_content/Blazor.NLDesignSystem/interop/Promise.min.js"></script>
    <script src="_content/Blazor.NLDesignSystem/interop/system.js"></script>
    <!-- Blazor.NLDesignSystem corrections-->
    <link href="_content/Blazor.NLDesignSystem/nl-design-system-overrides.css" rel="stylesheet" />
    <!-- Blazor.NLDesignSystem.Site.Components -->
    <link rel="apple-touch-icon" sizes="1024x1024" href="_content/Blazor.NLDesignSystem/nlds-1024.png" />
    <link href="_content/Blazor.NLDesignSystem.Site.Components/appLoad.css" rel="stylesheet" />
    <link href="_content/Blazor.NLDesignSystem.Site.Components/forkOnGithub.css" rel="stylesheet" />

    <!-- Set the default extension -->
    <script>
        System.config({
            packages: {
                '/': {
                    defaultExtension: 'js'
                }
            }
        });
    </script>
</head>
<body class="theme--large-padding theme--xxl-breakpoint">
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
        <span id="forkongithub"><a href="https://github.com/sjefvanleeuwen/nl-design-system-blazor">Fork me on GitHub</a></span>
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <!-- Blazor.NLDesignSystem -->
    <script src="_content/Blazor.NLDesignSystem/interop/collapse.js"></script>
</body>
</html>
