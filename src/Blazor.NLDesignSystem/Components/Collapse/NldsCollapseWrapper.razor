@namespace Blazor.NLDesignSystem.Components
<div class="collapse
     @(HasBackground ? string.Empty : "collapse--no-background")
     @(IsSimple ? "collapse--simple" : string.Empty)
     @(UseIcons ? "collapse--icons" : string.Empty)" style="@Style">
    <CascadingValue IsFixed="true" Name="GroupName" Value="@GroupName">
        @ChildContent
    </CascadingValue>
</div>
