<h2>Radios</h2>
@code {
    string radio1Value = "aanvrager_met_toeslagpartner";
    List<RadioItem> items1 = new List<RadioItem>() {
        new RadioItem() { Description = new MarkupString("<i>Alleenstaande<i>"), Value = "alleenstaande" },
        new RadioItem() { Description = new MarkupString("<i>Aanvrager <strong>met</strong> toeslagparter"), Value = "aanvrager_met_toeslagpartner" },
        new RadioItem() { Description = new MarkupString("<u>Disabled</u>"), Value = "disabled", IsDisabled = true }
    };

    string radio2Value = "bestaat niet";
    List<RadioItem> items2 = new List<RadioItem>() {
        new RadioItem() { Description = new MarkupString("Ja"), Value = "Ja" },
        new RadioItem() { Description = new MarkupString("Nee"), Value = "Nee" },
        new RadioItem() { Description = new MarkupString("Misschien"), Value = "Misschien", IsDisabled = true }
    };
}

<NldsRadio Items="@items1" @bind-Value="radio1Value" Identifier="groupName" ErrorText="Er is een error ofzo...">
