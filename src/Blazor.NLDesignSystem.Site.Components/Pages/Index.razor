    <h2>Radios</h2>
    @code {
        string radio1Value = "aanvrager_met_toeslagpartner";
        List<RadioItem> items1 = new List<RadioItem>() {
        new RadioItem() { Description = "<i>Alleenstaande</i>", Value = "alleenstaande" },
        new RadioItem() { Description = "<i>Aanvrager <strong>met</strong> toeslagparter</i>", Value = "aanvrager_met_toeslagpartner" },
        new RadioItem() { Description = "<u>Disabled</u>", Value = "disabled", IsDisabled = true }
    };

        string radio2Value = "bestaat niet";
        List<RadioItem> items2 = new List<RadioItem>() {
        new RadioItem() { Description = "Ja", Value = "Ja" },
        new RadioItem() { Description = "Nee", Value = "Nee" },
        new RadioItem() { Description = "Misschien", Value = "Misschien", IsDisabled = true }
    };
