        </NldsRadio>
        <h4>Geselecteerde waarde: @items1.FirstOrDefault(i => i.Value == radio1Value)?.Value</h4>
        <NldsRadio Items="@items2" @bind-Value="radio2Value" Identifier="horizontal" ItemAlignment="ItemAlignment.Horizontal">
            <Legend><NldsLegend>Item Alignment Horizontal</NldsLegend></Legend>
        </NldsRadio>
